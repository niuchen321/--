<Window x:Class="MyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Title="My Game" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="255"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="菜单" Background="AliceBlue"/>
        <Label Grid.Row="1" Grid.Column="0" Content="玩家信息" Background="Aquamarine"/>
        <Label Grid.Row="1" Grid.Column="1" Content="游戏信息" Background="Beige"/>
        <Label Grid.Row="2" Grid.Column="0" Content="库存和任务" Background="BurlyWood"/>
        <Label Grid.Row="2" Grid.Column="1" Content="战斗移动控制" Background="Lavender"/>
        
    </Grid>
</Window>
